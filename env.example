# Threads Ops Environment Configuration
# Copy this file to .env and fill in your actual values

# App Configuration
APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Shopify App Configuration
SHOPIFY_APP_KEY=your_shopify_app_key
SHOPIFY_APP_SECRET=your_shopify_app_secret
SHOPIFY_APP_SCOPES=read_orders,write_orders,read_inventory,write_inventory,read_products,write_products,read_fulfillments,write_fulfillments

# Label Service Configuration
SHIPPO_KEY=your_shippo_api_key
SHIPPO_TEST_MODE=true

# Printing Configuration
PRINT_MODE=zpl
DEFAULT_PRINTER=your_default_printer_name
BACKUP_PRINTER=your_backup_printer_name

# Security and Privacy
TELEMETRY=off
LOG_LEVEL=info
ENCRYPTION_KEY=your_32_character_encryption_key

# Error Reporting (Optional)
SENTRY_DSN=your_sentry_dsn

# Development Settings
MOCK_MODE=false
FAKE_SHOP_MODE=false
DEMO_DATA=true

# Hardware Configuration
SCANNER_TIMEOUT=5000
PRINTER_HEARTBEAT_INTERVAL=30000
BATCH_SIZE=50

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Offline Settings
OFFLINE_QUEUE_SIZE=1000
SYNC_INTERVAL=60000
MAX_OFFLINE_AGE=1440

# Kiosk Mode
KIOSK_MODE=false
AUTO_LAUNCH=false
FULLSCREEN=true
