{
  "name": "threads-ops",
  "version": "1.0.0",
  "description": "Threads Alliance Ops - Desktop Warehouse Management Application",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "Threads Alliance",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:renderer\"",
    "dev:electron": "tsc -p electron/tsconfig.json && electron .",
    "dev:renderer": "vite",
    "dev:cloud": "node cloud/server.js",
    "dev:full": "run-p dev:cloud dev:renderer",
    "build": "npm run build:electron && npm run build:renderer && npm run build:cloud",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:renderer": "vite build",
    "build:cloud": "tsc -p cloud/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "simulate:throttle": "node scripts/simulate-throttle.js",
    "simulate:printerdown": "node scripts/simulate-printerdown.js",
    "selfcheck": "bash ./scripts/self-check.sh",
    "test:hardware": "node scripts/test-hardware.js",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "npm-run-all -s lint typecheck",
    "prestart": "npm run check"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.30.1",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2",
    "vite": "^4.5.14"
  },
  "build": {
    "appId": "com.threadsalliance.ops",
    "productName": "Threads Ops",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "sign": "scripts/sign-windows.js"
    },
    "mac": {
      "target": "dmg",
      "sign": "scripts/sign-macos.js",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "scripts/entitlements.mac.plist",
      "entitlementsInherit": "scripts/entitlements.mac.plist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
